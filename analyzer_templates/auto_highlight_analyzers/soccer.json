{
  "description": "Soccer highlights analyzer – segments video at key narrative moments and extracts flat metadata for each clip.",
  "baseAnalyzerId": "prebuilt-videoAnalyzer",
  "config": {
    "returnDetails": true,
    "segmentationMode": "custom",
    "segmentationDefinition": "Segment the video at each significant soccer moment that contributes to a compelling highlight reel: Goals, Saves, Shots on Goal, Near Misses, Momentum Shifts, Crowd Celebrations, Controversial Decisions (e.g. VAR checks), Coach Reactions, Substitutions, Corner Kicks, Penalty Kicks, Fouls, Offsides, and other narrative-driven events. Each segment should capture exactly one distinct moment."
  },
  "fieldSchema": {
    "fields": {
      "Segments": {
        "type": "array",
        "method": "generate",
        "items": {
          "type": "object",
          "properties": {
            "SegmentId": {
              "type": "string",
              "method": "generate",
              "description": "Unique identifier for this segment."
            },
            "StartTimeMs": {
              "type": "integer",
              "method": "generate",
              "description": "Start time of this segment in milliseconds."
            },
            "EndTimeMs": {
              "type": "integer",
              "method": "generate",
              "description": "End time of this segment in milliseconds."
            },
            "Description": {
              "type": "string",
              "method": "generate",
              "description": "Natural language description of what happens in this segment."
            },
            "SegmentType": {
              "type": "string",
              "method": "classify",
              "description": "Overall context of this segment.",
              "enum": [
                "LiveGameplay",
                "Replay",
                "Stoppage",
                "HalftimeShow",
                "Advertisement",
                "Studio",
                "Other"
              ]
            },
            "PlayEvent": {
              "type": "string",
              "method": "classify",
              "description": "Primary moment in this segment.",
              "enum": [
                "Goal",
                "Save",
                "ShotOnGoal",
                "NearMiss",
                "MomentumShift",
                "Celebration",
                "ControversialDecision",
                "CoachReaction",
                "Substitution",
                "CornerKick",
                "PenaltyKick",
                "Foul",
                "Offside",
                "None",
                "Other"
              ]
            },
            "HomeTeamName": {
              "type": "string",
              "method": "generate",
              "description": "Home team name from the on-screen scoreboard."
            },
            "AwayTeamName": {
              "type": "string",
              "method": "generate",
              "description": "Away team name from the on-screen scoreboard."
            },
            "HomeTeamScore": {
              "type": "integer",
              "method": "generate",
              "description": "Home team’s score at the start of this segment."
            },
            "AwayTeamScore": {
              "type": "integer",
              "method": "generate",
              "description": "Away team’s score at the start of this segment."
            },
            "Half": {
              "type": "string",
              "method": "classify",
              "description": "Game phase shown on the scoreboard.",
              "enum": [
                "1stHalf",
                "2ndHalf",
                "ExtraTime",
                "Penalties",
                "Unknown"
              ]
            },
            "GameClock": {
              "type": "string",
              "method": "generate",
              "description": "Game clock value at the start of this segment (MM:SS)."
            },
            "ScoringPlayer": {
              "type": "string",
              "method": "generate",
              "description": "Name of the player who scored (if PlayEvent=Goal)."
            },
            "AssistingPlayer": {
              "type": "string",
              "method": "generate",
              "description": "Name of the player who provided the assist (if applicable)."
            },
            "CardPlayer": {
              "type": "string",
              "method": "generate",
              "description": "Name of the player who received a card (if PlayEvent=Card)."
            },
            "CardColor": {
              "type": "string",
              "method": "classify",
              "description": "Color of the card shown.",
              "enum": [
                "Yellow",
                "Red"
              ]
            },
            "CommentaryExcitement": {
              "type": "string",
              "method": "classify",
              "description": "Estimated excitement level of the commentary.",
              "enum": [
                "Low",
                "Medium",
                "High",
                "Very High"
              ]
            },
            "CrowdNoiseLevel": {
              "type": "string",
              "method": "classify",
              "description": "Estimated crowd noise level.",
              "enum": [
                "Low",
                "Medium",
                "High"
              ]
            },
            "InvolvedPlayers": {
              "type": "string",
              "method": "generate",
              "description": "Comma-separated list of players involved in the play."
            },
            "HighlightScore": {
              "type": "number",
              "method": "generate",
              "description": "AI-generated highlight-worthiness score between 0.0 and 1.0."
            }
          }
        }
      }
    }
  }
}