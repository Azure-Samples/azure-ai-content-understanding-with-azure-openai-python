{
  "description": "Eric and Asha Keynote AI Event highlight analyzer \u2013 segments video at key narrative moments and extracts flat metadata for each clip.",
  "baseAnalyzerId": "prebuilt-videoAnalyzer",
  "config": {
    "returnDetails": true,
    "segmentationMode": "custom",
    "segmentationDefinition": "Segment the video at important or exciting moments of the Eric and Asha Keynote AI Event. Focus on new announcements, demos, Q&A interactions, and other high-engagement segments. Target a medium clip density, with an overall highlight reel totaling around 120 seconds. Prioritize personalization by surfacing the most exciting moments."
  },
  "fieldSchema": {
    "fields": {
      "Segments": {
        "type": "array",
        "method": "generate",
        "items": {
          "type": "object",
          "properties": {
            "SegmentId": {
              "type": "string",
              "method": "generate",
              "description": "Unique identifier for this segment."
            },
            "StartTimeMs": {
              "type": "integer",
              "method": "generate",
              "description": "Start time of this segment in milliseconds."
            },
            "EndTimeMs": {
              "type": "integer",
              "method": "generate",
              "description": "End time of this segment in milliseconds."
            },
            "Description": {
              "type": "string",
              "method": "generate",
              "description": "Natural language description of what happens in this segment."
            },
            "SegmentType": {
              "type": "string",
              "method": "classify",
              "description": "Overall context of this segment.",
              "enum": [
                "KeynoteIntro",
                "SessionContent",
                "Demo",
                "Announcement",
                "QandA",
                "ClosingRemarks",
                "Other"
              ]
            },
            "Topic": {
              "type": "string",
              "method": "generate",
              "description": "Main topic or highlight of this segment."
            },
            "Speaker": {
              "type": "string",
              "method": "generate",
              "description": "Name of the speaker(s) in this segment."
            },
            "AudienceReaction": {
              "type": "string",
              "method": "classify",
              "description": "Estimated level of audience engagement or reaction.",
              "enum": [
                "Low",
                "Medium",
                "High",
                "Very High"
              ]
            },
            "AnnouncementType": {
              "type": "string",
              "method": "classify",
              "description": "Type of announcement made (if SegmentType=Announcement).",
              "enum": [
                "ProductLaunch",
                "FeatureUpdate",
                "ResearchHighlight",
                "Collaboration",
                "Other",
                "None"
              ]
            },
            "QandAQuestions": {
              "type": "string",
              "method": "generate",
              "description": "Comma-separated list of questions asked during a Q&A segment."
            },
            "HighlightScore": {
              "type": "number",
              "method": "generate",
              "description": "AI-generated highlight-worthiness score between 0.0 and 1.0."
            }
          }
        }
      }
    }
  }
}